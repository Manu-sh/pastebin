Gem::Specification.new do |s|
	s.name        = 'pastebind'
	s.version     = '0.0.0'
	s.date        = '2019-10-03'
	s.summary     = 'Pastebin Client'
	s.description = 'unofficial fully featured pastebin client written in ruby'
	s.authors     = ['Manu-sh']
	s.email       = 's3gmentationfault@gmail.com'
	s.homepage    = 'https://github.com/Manu-sh/pastebin'
	s.license     = 'GPL-3.0'

	s.executables << 'pastebind'
	s.require_paths = ['lib']

	s.files = Dir['bin/*', 'lib/*']

end
